{% extends 'base.html.twig' %}

{% trans_default_domain 'AppBundle' %}

{% block body %}
    <h1>Rama del comercio</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tipocomercio.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ tipocomercio.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tipocomercio_index') }}">Listado rama del comercio</a>
        </li><br>
        {% if is_granted('ROLE_ADMIN') %}
        <li>
            <a href="{{ path('tipocomercio_edit', { 'id': tipocomercio.id }) }}">Editar</a>
        </li><br>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
