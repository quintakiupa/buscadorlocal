{% extends 'base.html.twig' %}

{% trans_default_domain 'AppBundle' %}

    {% block inicio %}                        
    <li class="active"><a href="#"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> {{ 'menu.inicio' | trans }}</a></li>
    {% endblock %}

{% block body %}

<div class="container">
        <div class="row row-content">
            <div class="col-xs-12">
                <div id="mycarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#mycarousel" data-slide-to="1"></li>
                        <li data-target="#mycarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img class="img-responsive"
                             src="img/catapics/02.jpg" alt="Plano Catarroja">
                            <div class="carousel-caption">
                            <h2>{{ 'inicio.carrusel_1' | trans }} </h2>
                            <p>{{ 'inicio.carrusel_2' | trans }}</p>                            
                            </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive"
                             src="img/catapics/03.jpg" alt="Cataroja-3">
                            <div class="carousel-caption">
                            <h2>{{ 'inicio.carrusel_3' | trans }} </h2>
                            <p>{{ 'inicio.carrusel_4' | trans }} </p>                        
                            </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive"
                             src="img/catapics/04.jpg" alt="Catarroja-4">
                            <div class="carousel-caption">
                            <h2 class="media-heading">{{ 'inicio.carrusel_5' | trans }}</h2>                            
                            <p>{{ 'inicio.carrusel_6' | trans }} </p>                        
                            </div>
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <div class="btn-group" id="carouselButtons">
                        <button class="btn btn-danger btn-xs" id="carousel-pause">
                            <span class="glyphicon glyphicon-pause" aria-hidden="true"></span>
                        </button>
                        <button class="btn btn-danger btn-xs" id="carousel-play">
                            <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

    <div align="center"><a href="{{ path('buscar_new') }}"><input type='button' value='{{ 'info.boton_1' | trans }}' /></a></div>
        <div class="row row.content">
        <p style="padding:20px;"></p>                         
            <div class="col-xs-12 col-sm-4"> 
                <h3 align=center>{{ 'inicio.articulo_1' | trans }}</h3>                               
                <img class="img-rounded img-responsive" src="img/catapics/05.jpg" width= 600px>

                    <div class="media-body">
                        <h3 class="media-heading">{{ 'inicio.articulo_2' | trans }}</h3>
                        <p><h2><span class="badge">100%</span>{{ 'inicio.articulo_3' | trans }}</h2></p>
                        <p><h4><span class="label label-danger">{{ 'inicio.articulo_4' | trans }}</h4></span></p>
                        
                    </div>
            </div>
            <div class="col-xs-12 col-sm-4 verticalLine">
                <h3 align=center>{{ 'inicio.articulo_5' | trans }}</h3>
                <img class="img-rounded img-responsive" src="img/catapics/06.jpg" width= 600px>

                    <div class="media-body">
                        <h3>{{ 'inicio.articulo_6' | trans }}</h3>
                        <p><h4><span class="label label-danger">{{ 'inicio.articulo_7' | trans }}</h4></span></p>
                        
                    </div>
            </div>
            <div class="col-xs-12 col-sm-4 verticalLine">
                <h3 align=center>{{ 'inicio.articulo_8' | trans }}</h3>         
                <img class="img-rounded img-responsive" src="img/catapics/07.jpg" width= 600px>

                    <div class="media-body">
                        <h3>{{ 'inicio.articulo_9' | trans }}</h3>
                        <p>{{ 'inicio.articulo_10' | trans }} </p>
                        
                    </div>
            </div>
        </div>
    </div>
{% endblock %}