{% extends 'base.html.twig' %}

{% trans_default_domain 'AppBundle' %}

{% block body %}
    <h1>Buscar</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ buscar.id }}</td>
            </tr>
            <tr>
                <th>Criterio</th>
                <td>{{ buscar.criterio }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if buscar.fecha %}{{ buscar.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('buscar_index') }}">Listar b√∫squedas</a>
        </li>
        <li>
            <a href="{{ path('buscar_edit', { 'id': buscar.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
